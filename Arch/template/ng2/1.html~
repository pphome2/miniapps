	<script type="text/javascript">
		window.onscroll = function() {myFunction()};

		var header = document.getElementById('header');
		var navbar = document.getElementById('navbar');
		var gototop = document.getElementById('gototop');
		var pos = 200;
		var posgototop = 20;
		var live = false;
		var livegototop = false;

		function myFunction() {
			if (window.pageYOffset > pos) {
				if (!live){
					navbar.style.display='block';
					navbar.style.animationName='menu_screen';
					live = true;
					//setTimeout(function(){ navbar.style.display='block'; }, 20);
				}
			} else {
				if (live){
					navbar.style.animationName='menu_noscreen';
					//navbar.style.display='none';
					setTimeout(function(){ navbar.style.display='none'; }, 500);
					live = false;
				}
 			}
 			
			if (window.pageYOffset > posgototop) {
				if (!livegototop){
					gototop.style.display='block';
					gototop.style.animationName='to_top';
					livegototop = true;
					//setTimeout(function(){ navbar.style.display='block'; }, 20);
				}
			} else {
				if (livegototop){
					gototop.style.animationName='to_notop';
					//navbar.style.display='none';
					setTimeout(function(){ gototop.style.display='none'; }, 500);
					livegototop = false;
				}
 			}
		}
		

		function gotop() {
    		document.body.scrollTop = 0; // For Safari
    		document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
		}		
		
	</script>


